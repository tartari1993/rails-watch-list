<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <h1><%= @list.name %></h1>
</div>

<div class="d-flex justify-content-end pt-2 pb-2 px-4">
  <%= link_to "Add movie", new_list_bookmark_path(@list), class:"btn btn-gradient btn-sm" %>
</div>

<div class="container cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <div class="card-header">
        <%= image_tag bookmark.movie.poster_url, class: "movie-img" %>
      </div>
      <div class="card-body">
        <h5 class="card-title"> <%= bookmark.movie.title %></h5>
        <p class="card-text"> <%= bookmark.movie.overview %></p>
        <p><%= bookmark.comment %></p>
      </div>
      <div class="card-footer text-muted">
        <%= bookmark.movie.rating %>
      </div>
      <div>
        <%= link_to 'delete', bookmark_path(bookmark),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>
